<form action="/poi/{{poi._id}}" method="POST">
    <div class="uk-margin">
        <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: user"></span>
            <input class="uk-input uk-form-large" type="text" name="name" value="{{poi.name}}">
        </div>
    </div>
    <div class="uk-margin">
        <span class="uk-form-icon" uk-icon="icon: user"></span>
        <input class="uk-input uk-form-large" type="text" name="description" value="{{poi.description}}">
    </div>
    <div class="uk-margin">
        <div class="uk-form-label">Select a Category</div>
        <div class="uk-form-controls uk-form-controls-text">
            {{#each categories}}
                <label><input class="uk-radio" type="radio" name="category" value="{{_id}}"> {{name}}</label><br>
            {{/each}}
        </div>
    </div>
    <div class="uk-margin">
        <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Update </button>
    </div>
</form>

{{> upload }}
{{> error }}
